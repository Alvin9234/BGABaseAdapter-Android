<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <ListView
        android:id="@+id/lv_listindexview_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@mipmap/bga_adapter_divider_bitmap"
        android:overScrollMode="never"
        android:scrollbars="none"/>

    <TextView
        android:id="@+id/tv_listindexview_category"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_level8"
        android:background="@color/category_backgroundColor"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/size_level4"
        android:paddingRight="@dimen/size_level4"
        android:text="A"
        android:textColor="@color/category_textColor"
        android:textSize="@dimen/textSize_14"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_listindexview_tip"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@drawable/shape_tip"
        android:gravity="center"
        android:text="A"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:visibility="gone"
        tools:visibility="visible"/>

    <cn.bingoogolapple.androidcommon.adapter.demo.ui.widget.IndexView
        android:id="@+id/indexview"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_gravity="right|center"
        android:background="@android:color/transparent"/>
</FrameLayout>